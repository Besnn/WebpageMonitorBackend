# ============================================================
# WebpageMonitor Backend — active environment configuration
# ============================================================

# ------------------------------------------------------------
# Screenshot storage — SeaweedFS (local Docker cluster)
# Run: docker compose up seaweedfs-master seaweedfs-volume seaweedfs-filer seaweedfs-s3 -d
# ------------------------------------------------------------
USE_SEAWEEDFS_STORAGE=false
USE_S3_STORAGE=false

SEAWEEDFS_ENDPOINT=http://localhost:8333
SEAWEEDFS_BUCKET=screenshots
SEAWEEDFS_KEY_PREFIX=screenshots
SEAWEEDFS_ACCESS_KEY=
SEAWEEDFS_SECRET_KEY=
SEAWEEDFS_REGION=us-east-1

# ------------------------------------------------------------
# AWS S3 (disabled — set USE_S3_STORAGE=true to enable)
# ------------------------------------------------------------
S3_BUCKET_NAME=
S3_REGION_NAME=us-east-1
S3_ENDPOINT_URL=
S3_PRESIGN_EXPIRY=3600
S3_KEY_PREFIX=screenshots
S3_USE_PATH_STYLE=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

